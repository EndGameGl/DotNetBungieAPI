<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Title>DotNetBungieAPI.HashReferences</Title>
    <Authors>MeGl</Authors>
    <RepositoryUrl>https://github.com/EndGameGl/DotNetBungieAPI</RepositoryUrl>
    <Description>Destiny 2 hash references for definitions</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyVersion>1.26.0</AssemblyVersion>
    <FileVersion>1.26.0</FileVersion>
    <PackageVersion>1.26.0</PackageVersion>
    <Copyright>Copyright (c) MeGl 2025</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Version>$(AssemblyVersion)</Version>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
    <DocumentationFile>bin\Debug\NetBungieAPI.HashReferences.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <DocumentationFile>bin\Release\NetBungieAPI.HashReferences.xml</DocumentationFile>
  </PropertyGroup>

</Project>
